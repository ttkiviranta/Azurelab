@{
    ViewData["Title"] = "Azure Service Fabric - Azurelab";
}
<div ng-controller="AzurelabAppController" ng-init="refresh()">
    <div class="container">
        <div class="row top-buffer" style="background-color: #e8e8e8; padding: 10px">
            <div class="col-12">
                <div class="text-center">
                    <img src="/images/Azure_216 blue.svg" style="height: 100px; margin-right: 50px">
                    <img src="/images/ServiceFabricMesh.svg" style="height: 90px; margin-left: 50px">
                    <h2 style="color: rgb(50, 50, 50)">
                        Azurelab using Azure Service Fabric
